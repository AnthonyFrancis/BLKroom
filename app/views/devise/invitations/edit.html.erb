<% content_for :devise_form do %>
  <h3 class="heading text-2xl font-bold pt-4 mb-8">Create your BLKroom Account<%#= t "devise.invitations.edit.header" %></h3>

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <div class="mb-6">
      <%= f.label "Choose a username", class: "label" %>
      <small>This is how other community members will see you.</small>
      <%= f.text_field :username, autofocus: true, class: "input" %>
    </div>

    <div class="grid grid-cols-2 gap-4">
      <div class="mb-6">
        <%= f.label "First Name", class: "label" %>
        <%= f.text_field :first_name, class: "input" %>
      </div>

      <div class="mb-6">
        <%= f.label "Last Name", class: "label" %>
        <%= f.text_field :last_name, class: "input" %>
      </div>
    </div>


    <% if f.object.class.require_password_on_accepting %>
      <div class="mb-6">
        <%= f.label :password, class: "label" %><br />
        <%= f.password_field :password, class: "input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "label" %><br />
        <%= f.password_field :password_confirmation, class: "input" %>
      </div>
    <% end %>

    <div class="mb-6">
      <%= f.submit "Next", class: "btn btn-black" %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/form_wrap" %>