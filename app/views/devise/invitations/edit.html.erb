<% content_for :devise_form do %>
  <h2 class="heading text-4xl font-bold pt-4 mb-8">Set your username and password<%#= t "devise.invitations.edit.header" %></h2>

  <%= form_for(resource, as: resource_name, url: invitation_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :invitation_token, readonly: true %>

    <div class="mb-6">
      <%= f.label :username, class: "label" %>
      <%= f.text_field :username, autofocus: true, class: "input" %>
    </div>


    <% if f.object.class.require_password_on_accepting %>
      <div class="mb-6">
        <%= f.label :password, class: "label" %><br />
        <%= f.password_field :password, class: "input" %>
      </div>

      <div class="mb-6">
        <%= f.label :password_confirmation, class: "label" %><br />
        <%= f.password_field :password_confirmation, class: "input" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit t("devise.invitations.edit.submit_button"), class: "btn btn-black" %>
    </div>
  <% end %>
<% end %>

<%= render "devise/shared/form_wrap" %>