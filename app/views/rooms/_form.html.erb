<%= form_with(model: room, local: true) do |form| %>
  <% if room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-6">
    <%= form.label :name, class: "label" %>
    <%= form.text_field :name, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :room_image, class: "label" %>
    <label class="btn btn-white btn-small inline-flex items-center">
          <%= render_svg 'icons/image', styles: "fill-current text-gray-600 mr-2" %> Upload Image
          <%= form.file_field :room_image, class: "hidden" %>
    </label>
  </div>

  <div class="mb-6">
    <%= form.label :title, class: "label" %>
    <%= form.text_field :title, class: "input" %>
  </div>

  <div class="mb-6">
    <%= form.label :description, class: "label" %>
    <%= form.rich_text_area :description %>
  </div>

  <div class="mb-6">
    <%= form.label :sidebar, class: "label" %>
    <%= form.rich_text_area :sidebar %>
  </div>

  <div class="mb-6">
    <%= form.submit class: "btn btn-gray btn-small"%>    
  </div>
<% end %>
