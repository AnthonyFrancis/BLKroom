<div class="card flex flex-wrap items-center justify-between px-4 py-2">
  <div class="flex-1">
     <%= link_to room, class:"no-underline text-gray-700" do %>
      <p class="m-0 leading-tight">
        <span class="text-xs no-underline inline-flex items-center text-gray-700">
          <%= render_svg 'icons/conversation', styles: "w-3 fill-current text-gray-500 mr-1" %> blk/<%= room.name %>
        </span>
      </p>
      <h3 class="m-0 leading-tight text-base"><%= room.title %><h3>
    <% end %>
  </div>

  <div class="text-xs font-normal flex">
    <!--<div id="subscribed_block" class="my-6">
        <%#= render "subscriptions/subscription_index", room: room %>
    </div>-->

    <%= link_to room, class: "no-underline" do %>
      <%= render_svg 'icons/view', styles: "w-4 fill-current text-gray-500", title: "View" %>
    <% end %>
    <% if author_of(room)  %>
      <%= link_to edit_room_path(room), class: "no-underline ml-2" do %>
        <%= render_svg 'icons/edit', styles: "w-4 fill-current text-gray-500", title: "Edit" %>
      <% end %>

      <%= link_to room, class: "no-underline ml-2", method: :delete, data: { confirm: 'Are you sure?' } do %>
        <%= render_svg 'icons/delete', styles: "w-4 fill-current text-gray-500", title: "Delete" %>
      <% end %>
    <% end %>
  </div>
</div>