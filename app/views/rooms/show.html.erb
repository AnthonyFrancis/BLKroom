<% content_for :room_label, @room.name %>

<div class="bg-gray-600 text-white">
  <div class="container py-10 px-24 mx-auto">
    <h1 class="lg:text-3xl text-lg">blk/<%= @room.name %></h1>
  </div>
</div>

<% content_for :primary_content do %>
  <% @room.posts.each do |room| %>
    <%= render 'posts/post', post: room %>
  <% end %>
<% end %>

<% content_for :secondary_content do %>
    <%= render 'sidebar', room: @room %>
<% end %>

<%= render 'basic_layout' %>